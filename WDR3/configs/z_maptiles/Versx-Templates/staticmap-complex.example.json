{
    "style": "klokantech-basic",
    "latitude": <%= lat %>,
    "longitude": <%= lon %>,
    "zoom": 15,
    "width": 500,
    "height": 250,
    "scale": 1,
    "markers": [
        <% if (stops != null) { %>
            <% stops.forEach(function(stop) { %>
            {
                "url": "<%= stop.marker %>",
                "latitude": <%= stop.lat %>,
                "longitude": <%= stop.lon %>,
                "width": 50,
                "height": 50
            },
            <% }); %>
        <% } %>
        <% if (gyms != null) { %>
            <% gyms.forEach(function(gym) { %>
            {
                "url": "<%= gym.marker %>",
                "latitude": <%= gym.lat %>,
                "longitude": <%= gym.lon %>,
                "width": 50,
                "height": 50
            },
            <% }); %>
        <% } %>
        {
            "url": "<%= url %>",
            "latitude": <%= lat %>,
            "longitude": <%= lon %>,
            "width": 50,
            "height": 50
        }
    ]
}
